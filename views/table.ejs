<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Table</title>
		<link rel="stylesheet" href="css/bootstrap.min.css" />
		<link rel="stylesheet" href="css/bootstrap-cols.css" />
		
		<script src="/js/jquery-2.1.3.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>

		<style>
			/*html, body, .container-fluid {
				height: 100%;
			}*/

			html {
				position: relative;
				min-height: 100%;
			}

			body, .main {
				height: 100%;
			}

			.main {
				overflow: hidden;
			}

			.footer {
				position: absolute !important;
				bottom: 0;
			}

			.teamname {
				font-size: 7vw;
				text-align: center;
			}
		</style>

		<script>
			var teams = [];

			var socket = io({
				'sync disconnect on unload': true
			});

			socket.on('teams', function(data) {
				teams = data;
			});

			socket.on('showteams', function(data) {
				$('#leftteam').text(teams[data[0]]);
				$('#rightteam').text(teams[data[1]]);
			});

			$(function() {
				// http://blog.mojotech.com/responsive-dynamic-height-sticky-footers/
				var bumpIt = function() {  
					$('body').css('margin-bottom', $('.footer').height());
				}
				bumpIt();

				$(window).resize(function() {
					bumpIt();
				});
			})
		</script>
	</head>
	<body>
		<div class="container-fluid main">
			<div class="row">
				<div class="col-md-12">
					<h1>some banners</h1>
				</div>
			</div>

			<div class="row row-md-height">
				<div id="leftteam" class="col-md-6 col-md-height col-middle teamname">
					text1
				</div>

				<div id="rightteam" class="col-md-6 col-md-height col-middle teamname">
					text2
				</div>
			</div>
		</div>
		<div class="container-fluid footer">
			<div class="row">
				<div class="col-md-12">
					footer area
				</div>
			</div>
		</div>
	</body>
</html>
