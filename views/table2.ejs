<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Table</title>
		<link rel="stylesheet" href="css/bootstrap.min.css" />
		<link rel="stylesheet" href="css/bootstrap-cols.css" />
		
		<script src="/js/jquery-2.1.3.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/jquery.fittext.js"></script>
		<script src="/socket.io/socket.io.js"></script>

		<style>
			html, body, table {
				height: 100%;
				width: 100%;
			}

			.minimize-row {
				height: 1px;
			}

			.teamname {
				width: 50%;
				text-align: center;

				word-break: break-all;
				word-break: break-word;
				-webkit-hyphens: auto;
				-moz-hyphers: auto;
				hyphens: auto;
			}

			#tableselect {
				display: none;
			}

			#teamnames {
				display: none;
			}
		</style>

		<script>
			var teams = [];
			var tables = [];
			var showtables = [0, 0];
			var showteams = [];

			var socket = io({
				'sync disconnect on unload': true
			});

			function renderTeams() {
				$('#leftteam').text(teams[showteams[showtables[0]]]);
				$('#rightteam').text(teams[showteams[showtables[1]]]);
			}

			function renderTables() {
				$('#tableselect select').empty();
				tables.forEach(function(table, i) {
					$('#tableselect select').append($('<option></option>').val(i).text(table));
				});
			}

			socket.on('teams', function(data) {
				teams = data;
				renderTeams();
			});

			socket.on('tables', function(data) {
				tables = data;
				renderTables();
				$('#tableselect').show();
			});

			socket.on('showteams', function(data) {
				showteams = data;
				renderTeams();
			});

			$(function() {
				$('#select').click(function() {
					showtables[0] = parseInt($('#leftselect option:selected').first().val());
					showtables[1] = parseInt($('#rightselect option:selected').first().val());

					renderTeams();

					$('#tableselect').hide();
					$('#teamnames').show();
					$('.teamname').fitText(0.8);
				});
			})
		</script>
	</head>
	<body>
		<table>
			<tr class="minimize-row">
				<td colspan="2">
					<div class="container-fluid text-center">
						<h1>some banners</h1>
					</div>
				</td>
			</tr>
			<tr id="tableselect">
				<td colspan="2">
					<div class="container">
						<div class="row">
							<div class="col-sm-6 form-group">
								<select id="leftselect" class="form-control input-lg"></select>
							</div>
							<div class="col-sm-6 form-group">
								<select id="rightselect" class="form-control input-lg"></select>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 form-group text-center">
								<button id="select" class="btn btn-primary btn-lg">Select</button>
							</div>
						</div>
					</div>
				</td>
			</tr>
			<tr id="teamnames">
				<td id="leftteam" class="teamname"></td>
				<td id="rightteam" class="teamname"></td>
			</tr>
			<tr class="minimize-row">
				<td colspan="2">
					<div class="container-fluid text-center">
						footer text can go here
					</div>
				</td>
			</tr>
		</table>
	</body>
</html>
