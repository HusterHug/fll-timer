<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Table</title>
		<link rel="stylesheet" href="css/bootstrap.min.css" />
		<link rel="stylesheet" href="css/bootstrap-cols.css" />
		
		<script src="/js/jquery-2.1.3.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/jquery.fittext.js"></script>
		<script src="/socket.io/socket.io.js"></script>

		<style>
			html, body, table {
				height: 100%;
				width: 100%;
			}

			.minimize-row {
				height: 1px;
			}

			.teamname {
				width: 50%;
				text-align: center;

				word-break: break-all;
				word-break: break-word;
				-webkit-hyphens: auto;
				-moz-hyphers: auto;
				hyphens: auto;
			}
		</style>

		<script>
			var teams = [];
			var showteams = [];

			var socket = io({
				'sync disconnect on unload': true
			});

			function renderTeams() {
				$('#leftteam').text(teams[showteams[0]]);
				$('#rightteam').text(teams[showteams[1]]);
			}

			socket.on('teams', function(data) {
				teams = data;
				renderTeams();
			});

			socket.on('showteams', function(data) {
				showteams = data;
				renderTeams();
			});

			$(function() {
				$('.teamname').fitText(0.8);
			})
		</script>
	</head>
	<body>
		<table>
			<tr class="minimize-row">
				<td colspan="2">
					<div class="container-fluid">
						<h1>some banners</h1>
					</div>
				</td>
			</tr>
			<tr>
				<td id="leftteam" class="teamname"></td>
				<td id="rightteam" class="teamname"></td>
			</tr>
			<tr class="minimize-row">
				<td colspan="2">
					<div class="container-fluid">
						footer text can go here
					</div>
				</td>
			</tr>
		</table>
	</body>
</html>
